  <meta property="og:url" content="<%= url(@entry.link) %>">
  <meta property="og:description" content="<%= @entry.title %>" />
  <meta property="og:image" content="<%= @entry.og_image %>" />
  <title><%= @entry.title %> - <%= @site.title %></title>
<% else %>
  <meta property="og:url" content="http://douzen.net/">
  <meta content="個人で制作しているウェブサービスの紹介や、開発の過程で使用した技術について書いています。" property="og:description" />
  <title><%= @site.title %></title>
<% end %>

