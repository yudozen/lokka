<body>

<!-- Header Starts -->
<header>
  <div class="container">
    <div class="row">
      <div class="span6">
        <div class="logo">
          <h1><a href="/">Lyrical <span class="color">Magical</span></a></h1>
          <div class="hmeta">〜 ウェブサービス開発日記 〜</div>
        </div>
      </div>
    </div>
  </div>
</header>

<!-- Navigation bar starts -->
          <div class="navbar">
           <div class="navbar-inner">
             <div class="container">
               <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                 <span>Menu</span>
               </a>
               <div class="nav-collapse collapse">
                 <ul class="nav">
                   <li><a href="/home">Portfolio</a></li>
                   <li><a href="/">Blog</a></li>
                   <li><a href="https://github.com/yudozen">GitHub</a></li>
                 </ul>
               </div>
              </div>
           </div>
         </div>

<!-- Navigation bar ends -->

<div class="content">
  <div class="container">
    <%= yield %>
  </div>
</div>

<!-- Social -->

<div class="social-links">
  <div class="container">
    <div class="row">
      <div class="span12">
        <p class="big"><span>Follow Me On</span> <a href="http://www.facebook.com/yutaro.dozen"><i class="icon-facebook"></i>Facebook</a> <a href="#"><i class="icon-twitter"></i>Twitter</a> <a href="https://github.com/yudozen"><i class="icon-github"></i>GitHub</a></p>
      </div>
    </div>    
  </div>
</div>


<!-- Footer -->
<footer>
  <div class="container">
    <div class="row">

      <div class="widgets">
        <div class="span4">
          <div class="fwidget">
            <h5>サービス</h5>
            <ul>
              <li><a href="http://lyricalcall.com/?locale=ja">Lyrical Call</a></li>
              <li><a href="http://lmail.jp">Lyrical Mail</a></li>
              <li><a href="http://wow.curseforge.com/addons/arenadb">ArenaDB (開発終了)</a></li>
            </ul>
          </div>
        </div>

        <div class="span4">
          <div class="fwidget">
            <h5>Twitter Feed</h5>
          </div>
        </div>

        <div class="span4">
          <div class="fwidget">
            <h5>最近のエントリー</h5>
            <ul>
            <% Post.recent(5).each do |post| %>
              <li><a href="<%= url(post.link) %>"><%= post.title %></a></li>
            <% end %>
            </ul>
          </div>
        </div>
      </div>

      <div class="span12">
          <div class="copy">
            <h5>Lyrical <span class="color">Magical</span></h5>
            <p>Copyright &copy; 2013 douzen.net</p>
          </div>
      </div>
    </div>
  <div class="clearfix"></div>
  </div>
</footer>		

<!-- JS -->
<script src="js/jquery.js"></script>
<script src="js/bootstrap.js"></script>
