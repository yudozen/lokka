  <link href="<%= @theme.path %>/style/bootstrap.css" rel="stylesheet">
  <link rel="stylesheet" href="<%= @theme.path %>/style/font-awesome.css">
  <link href="<%= @theme.path %>/style/prettyPhoto.css" rel="stylesheet">
  <link rel="stylesheet" href="<%= @theme.path %>/style/slider.css">
  <link href="<%= @theme.path %>/style/style.css" rel="stylesheet">

  <!-- Colors - Orange, Purple, Green and Blue -->
  <link href="<%= @theme.path %>/style/blue.css" rel="stylesheet">

  <link href="<%= @theme.path %>/style/bootstrap-responsive.css" rel="stylesheet">
  
