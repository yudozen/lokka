<body>

<!-- Header Starts -->
<header>
  <div class="container">
    <div class="row">
      <div class="span6">
        <div class="logo">
          <h1><a href="/">Lyrical <span class="color">Magical</span></a></h1>
          <div class="hmeta">〜 ウェブサービス開発日記 〜</div>
        </div>
      </div>
    </div>
  </div>
</header>

<!-- Navigation bar starts -->
          <div class="navbar">
           <div class="navbar-inner">
             <div class="container">
               <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                 <span>Menu</span>
               </a>
               <div class="nav-collapse collapse">
                 <ul class="nav">
                   <li><a href="/home">Portfolio</a></li>
                   <li><a href="/">Blog</a></li>
                   <li><a href="https://github.com/yudozen">GitHub</a></li>
                 </ul>
               </div>
              </div>
           </div>
         </div>

<!-- Navigation bar ends -->

<div class="content">
  <div class="container">
    <%= yield %>
  </div>
</div>

<!-- Social -->

<div class="social-links">
